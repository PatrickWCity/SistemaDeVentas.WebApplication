@model MvcApplication1.Models.Categoria
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>
<form action="/Categoria/Editarcategoria" method="post">
    <input type="hidden" name="categoria.idCategoria" value="@Model.idCategoria" />
    <input type="text" name="categoria.nombre" value="@Model.nombre" />
    <input type="text" name="categoria.descripcion" value="@Model.descripcion" />
    <input type="submit" />
</form>
