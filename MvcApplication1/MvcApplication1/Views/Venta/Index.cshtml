@model List<MvcApplication1.Models.Venta>

@{
    ViewBag.Title = "Ventas";
}
<style>
    #alerta {
        background-color: #aaffcc;
        padding: 10px;
        display: inline-block;
        width: 100%;
        animation: aparecer 2s;
    }

    article {
        width: 20%;
        margin: 10px;
        padding: 10px;
        float: left;
        background-color: #aaccff;
    }

    @@keyframes aparecer {
        0% {
            opacity: 0;
        }

        100% {
            opacity: 1;
        }
    }
</style>
<div class="body padding">
    <div class="container">
        <h2 class="text-center text-success">Listado de Ventas</h2>
        <div class="well well-sm"><a class="btn btn-primary" href="~/Venta/Crear">Nueva Venta</a></div>
        @if (Request.Params["Msg"] != null)
        {
            <span id="alerta">@Request.Params["Msg"]</span>
        }
        <table class="table table-hover table-striped">
            <thead>
                <tr class="bg-primary">
                    <th>ID de Venta</th>
                    <th>Total</th>
                    <th>ID de Cliente</th>
                    <th>ID de Vendedor</th>
                    <th>Fecha</th>
                    <th>Descuento</th>
                    <th>IVA</th>

                    <th colspan="2">Operaciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var objCliente in Model)
                {
                    <tr>
                        <td>@objCliente.idVenta</td>
                        <td>@objCliente.total CLP</td>
                        <td>@objCliente.idCliente</td>
                        <td>@objCliente.idVendedor</td>
                        <td>@objCliente.fecha</td>
                        <td>@objCliente.descuento %</td>
                        <td>@objCliente.IVA %</td>
                        <td><a class="btn btn-info" href="~/Venta/Editar/@objCliente.idVenta"><span class="glyphicon glyphicon-pencil"></span> Editar</a></td>
                        <td><a class="btn btn-danger" href="~/Venta/Eliminar/@objCliente.idVenta"><span class="glyphicon glyphicon-remove"></span> Eliminar</a></td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>